<h1>Create a new event</h1>

<%= form_with model: @event do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :category %>
    <%= form.select :category, ["Party", "pet-garding"] %>
  </p>
  <p>
    <%= form.label :date %>
    <%= form.datetime_local_field :date %>
  </p>
  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>